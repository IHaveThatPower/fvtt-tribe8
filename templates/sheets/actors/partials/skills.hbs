<h2 class="skills">
	<span>
		<span class="header-label">Skills</span>
		{{> "systems/tribe8/templates/sheets/actors/partials/toggle.hbs" toggleRight=sorting.sort-skills action="sort-skills" leftName="Name" rightName="Level"}}
	</span>
	<button name="add-skill" data-action="addNewItem" type="button"><i class="fa fa-solid fa-plus"></i></button>
</h2>
<div class="skills">
	{{#if (not skills)}}
	<em>None</em>
	{{/if}}
	{{#each skills.sortedIDs as |skillId|}}
	{{#with (lookup ../skills skillId)}}
	<div class="skill" data-item-id="{{id}}" class="draggable">
		<div class="identity" data-action="editItem">
			<div class="name">
				{{system.name}}
				{{~#if (lookup @root.COMBAT_SKILLS system.combatCategory)~}}
				<span class="combatCategory" title="{{localize (concat "tribe8.item.skill.combatCategory." (lookup @root.COMBAT_SKILLS system.combatCategory) "-hint")}}">{{system.combatCategory}}</span>
				{{~/if}}
			</div>
			{{#if system.specify}}
			<div class="specific">
				({{system.specific}})
			</div>
			{{/if}}
		</div>
		{{#if specializations}}
		<div class="specializations" data-action="editItem">
			<label for="{{uuid}}.system.specializations">Specializations</label>
			<div class="specialization-list" title="{{specializations}}" name="{{uuid}}.system.specializations">{{specializations}}</div>
		</div>
		{{/if}}
		<div class="points-block">
			<div class="points-type">Level</div>
			<div class="value">{{system.level}}</div>
		</div>
		<div class="points-block">
			<div class="points-type">Cpx</div>
			<div class="value">{{system.cpx}}</div>
		</div>
		<div class="points-block edie-block">
			<div class="points-type">EDie</div>
			<div class="value">
				<input type="number" value="{{system.eDieSpent}}" name="system.eDieSpent"  />
				<div class="edie-buttons">
					<button name="edie.inc" data-action="incrementEdie" title="SPEND an E-Die on this skill. It will be removed from the character's general E-Die pool, if available, or spend from available XP if not." type="button">+</button>
					<button name="edie.dec" data-action="decrementEdie" title="Remove SPENT E-Die. It will be added back to the character's general E-Die pool" type="button">-</button>
				</div>
			</div>
		</div>
	</div>
	{{/with}}
	{{/each}}
</div>