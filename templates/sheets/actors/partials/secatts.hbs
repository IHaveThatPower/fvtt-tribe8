			<div class="name block-tab-label" title="{{localize (concat "tribe8.actor.character.attributes.secondary.social." key ".full")}}">{{localize (concat "tribe8.actor.character.attributes.secondary.social." key ".short")}}</div>
			<div class="value">{{this.value}}</div>
