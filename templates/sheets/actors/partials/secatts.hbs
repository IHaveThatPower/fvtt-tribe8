<div class="secondary-attributes">
	<h3>{{localize "tribe8.actor.character.attributes.secondary.name.short.plural"}}</h3>
	<div class="attribute-set">
		{{#each document.system.attributes.secondary.physical as |attribute key|}}
		{{#if (not (or (eq key "shock") (eq key "thresholds")))}}
		<div class="attribute-block">
			<div class="name block-tab-label" title="{{localize (concat "tribe8.actor.character.attributes.secondary.physical." key ".full")}}">{{localize (concat "tribe8.actor.character.attributes.secondary.physical." key ".short")}}</div>
			<div class="value">{{this.value}}</div>
		</div>
		{{/if}}
		{{/each}}
		{{!-- Stub for social attributes, if added --}}
