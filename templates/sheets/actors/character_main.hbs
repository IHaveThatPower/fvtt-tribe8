<div class="character-sheet tab main {{tab.cssClass}}" data-group="character" data-tab="main">
	<div class="left-column">
		{{> "systems/tribe8/templates/sheets/actors/partials/portrait.hbs"}}
		{{> "systems/tribe8/templates/sheets/actors/partials/basic_info.hbs"}}
		{{> "systems/tribe8/templates/sheets/actors/partials/attributes.hbs"}}
		{{> "systems/tribe8/templates/sheets/actors/partials/points.hbs"}}
	</div>
	<div class="middle-column">
		{{> "systems/tribe8/templates/sheets/actors/partials/skills.hbs"}}
	</div>
	<div class="right-column">
		{{> "systems/tribe8/templates/sheets/actors/partials/pf.hbs"}}
		{{#if hasMagicSkills}}
		{{> "systems/tribe8/templates/sheets/actors/partials/magic.hbs"}}
		{{/if}}
		{{#if hasCombatSkills}}
		{{> "systems/tribe8/templates/sheets/actors/partials/maneuvers.hbs"}}
		{{/if}}
		{{> "systems/tribe8/templates/sheets/actors/partials/injuries.hbs"}}
	</div>
</div>
