<div class="dice-roll" data-action="expandRoll">
    {{#if flavor}}
    <div class="dice-flavor">{{flavor}}</div>
    {{/if}}
    <div class="dice-result">
        <div class="dice-formula{{#if unskilled}} unskilled{{/if}}">{{formula}}</div>
        {{{tooltip}}}
        <h4 class="dice-total{{#if fumbled}} fumble{{else}}{{#if multisix}} multisix{{/if}}{{#if allsix}} allsix{{/if}}{{/if}}">{{total}}</h4>
    </div>
</div>
